{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "jsonrising",
  "version": "${PACKAGE_VERSION}",
  "identifier": "com.jsonrising.app",
  "build": {
    "beforeDevCommand": "dotnet watch run --project src/JSONRising.csproj",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "dotnet publish -c release src/JSONRising.csproj -o dist",
    "frontendDist": "../dist/wwwroot"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "JSON Rising",
        "width": 800,
        "height": 600
      }
    ],
    "security": {
      "csp": null,
      "capabilities": [
        "default"
      ]
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}